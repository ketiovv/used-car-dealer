<UserControl x:Class="used_car_dealer.Views.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:used_car_dealer.Views"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">
    <StackPanel Background="White" Margin="250 50">
        <TextBlock Text="Dealer side" 
                 FontSize="30" 
                 Height="40"
                 HorizontalAlignment="Center"
                   Margin="0 0 0 50"/>
        <Button Content="Show cars" Command="{Binding NavigateCommand}" 
                CommandParameter="CarsPanel" Margin="0 0 0 70" Height="35"/>
        <Button Content="Show customers" Command="{Binding NavigateCommand}" 
                CommandParameter="CustomersPanel" Margin="0 0 0 70" Height="35"/>
        <Button Content="Show deals" Command="{Binding NavigateCommand}" 
                CommandParameter="DealsPanel" Height="35"/>

    </StackPanel>
</UserControl>
